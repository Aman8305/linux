export JRE_HOME=/data/java/jre
CATALINA_OPTS="-server -Xms256M -Xmx1024M -Xmn128M -XX:PermSize=128M -XX:MaxPermSize=256M -Duser.timezone=Asia/Shanghai -Djava.awt.headless=true"
